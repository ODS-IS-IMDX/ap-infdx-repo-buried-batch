<!DOCTYPE project>
<Configuration status="off">
	<Properties>
		<Property name="format">%d{yyyy/MM/dd HH:mm:ss.SSS} [infra-dx-app] [%t] %-6p %c{10} %m%n</Property>
	</Properties>
	<Appenders>
  		<Console name="console" target="SYSTEM_OUT">
  			<PatternLayout pattern="${format}" />
  		</Console>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<appender-ref ref="console" />
		</Root>
	</Loggers>
</Configuration>